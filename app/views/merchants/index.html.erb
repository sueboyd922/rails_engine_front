<h1> All Merchants </h1>

<p> Find a Merchant by Name </p>
<%= form_with url: "/merchants", method: :get, local: true do |form| %>
<%= form.label :search %>
<%= form.text_field :search %>
<%= form.submit "Search" %>
<% end %>

<% if @merchants.empty? %>
  <p> Sorry no matches for this search </p>
<% end %>


<% @merchants.each do |merchant| %>
  <p><%= link_to "#{merchant.name}", "/merchants/#{merchant.id}" %></p>
<% end %>
